
    <div class="container py-5" style="max-width:600px">
        <h1 class="mb-4">
            <%= title %>
        </h1>

        <form action="<%= formAction %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input name="name" class="form-control" value="<%= item.name||'' %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Price</label>
                <input name="price" type="number" step="0.01" class="form-control"
                    value="<%= item.price!=null? item.price : '' %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Image
                    <% if (item.image) { %>
                        â€” current:
                        <img src="<%= item.image %>" alt="" style="height:40px; object-fit:cover">
                        <% } %>
                </label>
                <input name="image" type="file" class="form-control" <%=item._id ? '' : 'required' %>
                >
            </div>

            <button class="btn btn-success">
                <%= submitLabel %>
            </button>
            <a href="/admin/items" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>