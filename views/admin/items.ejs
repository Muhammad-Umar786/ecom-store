<style>
    .thumb {
        height: 60px;
        object-fit: cover;
    }
</style>

<div class="container py-5">
    <h1 class="mb-4">Manage Items</h1>
    <a href="/admin/items/new" class="btn btn-primary mb-3">+ Add New Item</a>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th style="width: 160px">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item=> { %>
                <tr>
                    <td>
                        <img src="<%= item.image %>" alt="" class="thumb">
                    </td>
                    <td>
                        <%= item.name %>
                    </td>
                    <td>$<%= item.price.toFixed(2) %>
                    </td>
                    <td>
                        <a href="/admin/items/<%= item._id %>/edit" class="btn btn-sm btn-outline-secondary">
                            Edit
                        </a>

                        <form action="/admin/items/<%= item._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-sm btn-outline-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>