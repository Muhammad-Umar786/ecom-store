
<div class="container py-5" style="max-width:400px">
  <h2 class="mb-4">Login</h2>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/login" method="POST">
    <div class="mb-3"><input name="email" class="form-control" placeholder="Email" value="<%= form.email||'' %>" required></div>
    <div class="mb-3"><input name="password" type="password" class="form-control" placeholder="Password" required></div>
    <button class="btn btn-primary w-100" type="submit">Login</button>
  </form>

  <p class="mt-3 text-center">Don't have an account? <a href="/signup">Sign up</a>.</p>
</div>
